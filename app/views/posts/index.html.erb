
<h1>News</h1>
<hr>

<% if @posts.present? %>
	<% @posts.each do |post| %>
		<% if current_user&.is_admin? %>
			<%= link_to "Delete", post_path(post), 
					method: :delete,
          data: { confirm: 'Are you sure you want to delete this post?'},
					class: "btn btn-danger text-right pull-right ml-2" %>
 	 		<%= link_to "Edit", edit_post_path(post), class: "btn btn-warning text-right pull-right" %>
		<% end %>
		<h4><%= post.title %></h4>
		<br>
		<%= markdown(post.content) %>
		<%= markdown("---------") %>
		<br>
	<% end %>
   <%= paginate @posts, theme: 'twitter-bootstrap-4'%>
<% else %>
  There is currently no CSS news! Stay tuned for some Hot and exciting news. 
  <br><br>
<% end %>

<% if current_user&.is_admin? %>
   <%= link_to "New Post", new_post_path, class: "btn btn-success" %>
<% end %>
<br><br> 