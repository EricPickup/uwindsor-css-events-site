<% if @page %>
  <% if current_user&.is_admin? %>
    <%= link_to "Edit page", edit_markdown_page_path(@page), class: "btn btn-warning text-right float-right" %>
  <% end %>
  <%= markdown(@page.text) %>
<% else %>
  Page with title "<%= @page_title %>" not found.
  <br><br>
  <% if current_user&.is_admin? %>
    <%= link_to "New page", new_markdown_page_path(title: @page_title), class: "btn btn-success" %>
  <% end %>
<% end %>
